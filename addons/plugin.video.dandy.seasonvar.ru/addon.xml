<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.dandy.seasonvar.ru" name="seasonvar.ru"
       version="2.0.4" provider-name="dandy">
  <requires>
    <import addon="xbmc.python" version="3.0.0"/>
    <import addon="script.module.xbmc.helpers" version="3.0.0"/>
    <import addon="script.module.translit" version="3.0.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" provides="video"
             library="default.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en_GB">Seasovar.ru Kodi Video Addon</summary>
    <description lang="en_GB">Site seasonvar.ru contains best series and all seasons.</description>
    <summary lang="ru_RU">Дополнение Kodi для Seasonvar.ru</summary>
    <description lang="ru_RU">На сайте seasonvar.ru собрание лучших сериалов и ВСЕХ их сезонов.</description>
    <platform>all</platform>
    <assets>
        <icon>icon.png</icon>
        <fanart>fanart.jpg</fanart>
    </assets>
    <language>ru en</language>
  </extension>
</addon>
